{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2016",          
    "lib": ["ES2016", "DOM"],    /* Support modern JavaScript features and DOM types. */
    "resolveJsonModule": true,  // Enable this option

    /* Modules */
    "module": "ESNext",          
    "rootDir": "./src",          
    "outDir": "./dist",          
    "moduleResolution": "node",  

    /* Interop Constraints */
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,  

    /* Type Checking */
    "strict": true,              

    /* Source Maps */
    "sourceMap": true,           /* Enable source maps for easier debugging. */

    /* Completeness */
    "skipLibCheck": true,
      
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": ["node_modules"],
}
